{
  "name": "passport-steam-modern",
  "version": "1.0.0",
  "description": "Modern TypeScript Passport strategy for Steam OpenID 2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oldmagic/passport-steam.git"
  },
  "bugs": {
    "url": "https://github.com/oldmagic/passport-steam/issues"
  },
  "homepage": "https://github.com/oldmagic/passport-steam#readme",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/oldmagic"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "format": "prettier -w .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "docs": "typedoc",
    "release": "changeset publish"
  },
  "peerDependencies": {
    "passport": "^0.7.0"
  },
  "dependencies": {
    "passport-strategy": "^1.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@types/node": "^24.3.0",
    "@types/passport": "^1.0.17",
    "@types/passport-strategy": "^0.2.38",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.1",
    "eslint": "^9.34.0",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
