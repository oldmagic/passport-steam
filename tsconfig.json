{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
  "outDir": "dist",
  "rootDir": ".",
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src", "tests", "examples"],
  "exclude": ["dist", "node_modules"]
}
